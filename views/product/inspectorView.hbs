                                <td class="tdtd">{{data.status}}</td>
                            </tr>
                            <tr>
                                <td class="tdtitle">Mô tả: </td>
                                <td class="tdtd">{{data.description}}</td>
                            </tr>
                            <tr>
                                <td class="tdtitle">Giá khởi điểm: </td>
                                <td class="tdtd" id="giakhoidiem"></td>
                            </tr>


                        </table>

                        <script>
                            var a = {{ data.currentPrice }};
                            function formatMoney(number) {
                                return number.toLocaleString('VI', { style: 'currency', currency: 'VND' });
                            }
                            document.getElementById("giakhoidiem").innerHTML = formatMoney(a);
                        </script>
                        <script>
                            var a = {{ data.startPriceProduct }};
                            function formatMoney(number) {
                                return number.toLocaleString('VI', { style: 'currency', currency: 'VND' });
                            }
                            document.getElementById("giaketthuc").innerHTML = formatMoney(a);
                        </script>
                        <script>
                            var d = new Date({{ data.registerDate }}).toLocaleString();
                            document.getElementById("registerDate").innerHTML = d;
                        </script>
                        <script>
                            var d = new Date({{ data.extraTime }}).toLocaleString();
                            document.getElementById("extraTime").innerHTML = d;
                        </script>
