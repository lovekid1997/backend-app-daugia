        <style>
            table.tableez {
                margin-top: 10px;
            }

            h1.h {
                margin-top: 20px;
            }

            td.tdtitle {
                font-weight: bold;
                font-size: medium;
            }

        </style>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    <h1 class="h">Detail Product</h1>
                    <div>
                        <table class="tableez" cellpadding="4" cellspacing="0" style="width:400px">
                            <tr>
                                {{# each data.imageProduct}}
                                <td><img src="https://api-backend-daugia-2.herokuapp.com/uploads/{{ this }}"
                                        onerror="this.onerror=null; this.src='https://omegamma.com.au/wp-content/uploads/2017/04/default-image.jpg'"
                                        width="200px" height="200px"></td>
                                {{/each}}
                            </tr>
                            <tr>
                                <td class="tdtitle">Tên sản phẩm: </td>
                                <td class="tdtd">{{data.nameProduct}}</td>
                            </tr>

                            <tr>
                                <td class="tdtitle">Thể loại:</td>
                                <td class="tdtd">{{data.nameProductType}}</td>
                            </tr>
                            <tr>
                                <td class="tdtitle">Trạng thái: </td>
                                <td class="tdtd">{{data.status}}</td>
                            </tr>
                            <tr>
                                <td class="tdtitle">Mô tả: </td>
                                <td class="tdtd">{{data.description}}</td>
                            </tr>
                            <tr>
                                <td class="tdtitle">Giá khởi điểm: </td>
                                <td class="tdtd" id="giakhoidiem"></td>
                            </tr>
                            <tr>
                                <td class="tdtitle">Người thắng cuộc: </td>
                                <td class="tdtd">{{data.winner.[0]}}</td>
                            </tr>
                            <tr>
                                <td class="tdtitle">Giá thắng cuộc: </td>
                                <td class="tdtd" id="giaketthuc">{{data.startPriceProduct}}</td>
                            </tr>
                            <tr>
                                <td class="tdtitle">Thời gian bắt đầu đấu giá: </td>
                                <td class="tdtd" id="registerDate"></td>
                            </tr>
                            <tr>
                                <td class="tdtitle">Thời gian kết thúc: </td>
                                <td class="tdtd" id="extraTime"></td>
                            </tr>
                            <tr>
                                <td class="tdtitle">Đã kết thúc: </td>
                                <td class="tdtd">{{data.hide}}</td>
                            </tr>

                        </table>

                        <script>
                            var a = {{ data.currentPrice }};
                            function formatMoney(number) {
                                return number.toLocaleString('VI', { style: 'currency', currency: 'VND' });
                            }
                            document.getElementById("giakhoidiem").innerHTML = formatMoney(a);
                        </script>
                        <script>
                            var a = {{ data.startPriceProduct }};
                            function formatMoney(number) {
                                return number.toLocaleString('VI', { style: 'currency', currency: 'VND' });
                            }
                            document.getElementById("giaketthuc").innerHTML = formatMoney(a);
                        </script>
                        <script>
                            var d = new Date({{ data.registerDate }}).toLocaleString();
                            document.getElementById("registerDate").innerHTML = d;
                        </script>
                        <script>
                            var d = new Date({{ data.extraTime }}).toLocaleString();
                            document.getElementById("extraTime").innerHTML = d;
                        </script>
                    </div>
                    <br>
                    <button type="button" onclick="document.location = '/user/product'" class="btn btn-secondary">Quay Lại</button>
                    <button type="button" class="btn btn-danger">Xóa</button>
                    <button type="button" onclick="document.location = '/user/product/edit/{{id}}'" class="btn btn-primary">Sửa</button>

